upstream blog.nathansplace {
        server 172.17.0.103;
}

server {
        listen          80;
        server_name     blog.nathansplace.co.uk;
        index index.html index.htm;
        access_log /var/log/nginx/blog.nathansplace.co.uk_access.log;
        error_log /var/log/nginx/blog.nathansplace.co.uk_error.log;

        location / {
                proxy_pass http://blog.nathansplace;
                proxy_redirect off;
                proxy_buffering off;
                proxy_set_header        Host            $host;
                proxy_set_header        X-Real-IP       $remote_addr;
                proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
        }
}

